<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="atu.com.lazyloadfragmentdemo.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tab_main"
        >

    </android.support.v4.view.ViewPager>


    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tab_main"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:tl_iconGravity="TOP"
        app:tl_iconHeight="18dp"
        app:tl_iconWidth="18dp"
        app:tl_indicator_color="@color/blue"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="@color/blue"
        app:tl_textUnselectColor="@color/gray"
        app:tl_textsize="11sp"
        app:tl_underline_color="@color/blue"
        app:tl_underline_height="0dp" />



</RelativeLayout>
